<%= form_with model: @album_form, url: url, method: method, id: 'new_post', local: true do |f|%>
  <%= render 'layouts/error_messages', model: f.object %>
  <div class="field">
    <%= f.label :title, "タイトル" %><br />
    <%= f.text_field :title, id:"prototype_title" %>
  </div>

  <div class="field">
    <%= f.label :description, "説明" %><br />
    <%= f.text_area :description, class: :form__text, id:"prototype_catch_copy" %>
  </div>

  <div class="field">
    <div class="previews" id="previews"></div>
    <%= f.label :image, "画像" %><br />
    <%= f.file_field :image, id:"prototype_image" %>
  </div>

  <div class="field">
    <%= f.label :tag_name,"タグ" %><br />
    <%= f.text_field :tag_name, placeholder: 'add tags' %>

  <div class="actions">
    <%= f.submit "投稿する", class: :form__btn  %>
  </div>
<% end %>