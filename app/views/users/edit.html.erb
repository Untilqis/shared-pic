<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー編集機能</h2>
      <%= form_with model: @user, local: true do |f| %>

        <%= render 'layouts/error_messages', model: f.object %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, id:"user_email", class:"input-box", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード（6文字以上）" %><br />
          <%= f.password_field :password, id:"user_password", class:"input-box", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード再入力" %><br />
          <%= f.password_field :password_confirmation, id:"user_password_confirmation", class:"input-box", autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :current_password %> <br />
          <%= f.password_field :current_password, autocomplete: "current-password", id:"current-password", class:"input-box" %>
        </div>

        <div class="actions">
          <%= link_to "Back", root_path, class: :form__btn %> <%= f.submit "Update", class: :form__btn %>  
        </div>
      <% end %>

    </div>
  </div>
</div>