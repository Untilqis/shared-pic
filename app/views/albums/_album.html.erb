<div class=“card”>
  <%= link_to image_tag(album.image, class: :card__img), album_path(album.id) %>
  <div class=“card__body”>
    <%= link_to album.title, album_path(album.id), class: :card__title %>
    <p class=“card__summary”>
      <%= album.catch_copy %>
    </p>
      <%= link_to "by #{album.user.name}", user_path(album.user.id), class: :card__user %>
  </div>
</div>